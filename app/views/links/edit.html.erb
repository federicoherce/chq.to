<h1 style="text-align:center" >Editar Link</h1>
<div class="forms">
  <%= form_for(@link, as: :link, url: link_path(@link), method: :patch) do |f| %>
    <div class="form-group">
      <%= f.label :url %><br>
      <%= f.text_field :url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :nombre %><br>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit 'Update Link', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
