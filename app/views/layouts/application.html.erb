<%= javascript_include_tag 'rails-ujs' %>
<!DOCTYPE html>
<html>
  <head>
    <title>ChqTo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  </head>

  <body>
<nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Cqh.To</a>

  <div class="d-flex align-items-center">
    <% if signed_in? %>
      <%= link_to "Mi perfil", user_index_path, class: "nav-link custom-link mr-2" %>
      <%= link_to "Salir", destroy_user_session_path, method: :delete, class: "nav-link custom-link mr-2" %>
    <% else %>
      <%= link_to "Registrarse", new_user_registration_path, class: "nav-link custom-link mr-2" %>
      <%= link_to "Ingresar", new_user_session_path, class: "nav-link custom-link" %>
    <% end %>
  </div>
</nav>



   <b style=text-align:center>
   <p class="notice"><%= notice %> </p>
   <p class="alert"><%= alert %></p>
   </b>
    <%= yield %>
    
  </body>
</html>

<style>
.custom-link {
  color: white; 
  text-decoration: none; 
  padding: 5px 10px; 
  transition: color 0.3s ease; 
}

.custom-link:hover {
  color: #ffc107; 
}
</style>